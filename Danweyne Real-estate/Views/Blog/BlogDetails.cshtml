@model Models.Database_Models.Blog
@{
    ViewData["Title"] = "BlogDetails";
    //Layout = "~/Views/Shared/_Layout.cshtml";
    
}
<div class="page-head">
    <div class="container">
        <div class="row">
            <div class="page-head-content">
                <h1 class="page-title">@Model.Title</h1>
            </div>
        </div>
    </div>
</div>
<!-- End page header -->

<div class="content-area blog-page padding-top-40" style="background-color: #FCFCFC; padding-bottom: 55px;">
    <div class="container">
        <div class="row">
            <div class="blog-lst col-md-12 pl0">
                <section id="id-100" class="post single">

                    <div class="post-header single">
                        <div class="">
                           @* <h2 class="wow fadeInLeft animated">@Model.Title</h2>*@
                            <div class="title-line wow fadeInRight animated"></div>
                        </div>
                        <div class="row wow fadeInRight animated">
                            <div class="col-sm-6">
                                <p class="author-category">
                                    By <a>@Model.AuthorName</a> in <a>@Model.BlogName</a>
                                </p>
                            </div>
                            <div class="col-sm-6 right">
                                <p class="date-comments">
                                    <span><i class="fa fa-calendar-o"> </i> @Model.DateTime</span>


                                </p>
                            </div>
                        </div>
                        <div class="image wow fadeInLeft animated">
                            <a href="#">
                                <img src="~/@Model.BlogImg" class="img-responsive" alt="Example blog post alt" style="height:455px;width100%">
                            </a>
                        </div>
                        @*<div class="image wow fadeInRight animated">
                        <img src="@Model.BlogImg" class="img-responsive" alt="Example blog post alt">
                        </div>*@
                    </div>
                    <div id="post-content" class="post-body single wow fadeInLeft animated">
                        @Html.Raw(Model.Summary)
                    </div>
                    <div id="post-content" class="post-body single wow fadeInLeft animated">
                        @Html.Raw(Model.BlogDesc)
                    </div>



                </section>

                <section class="about-autor">
                </section>


            </div>
        </div>

    </div>
</div>

