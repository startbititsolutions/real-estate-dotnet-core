@model Models.View_Model.UserLoginModel

<div class="col-md-6">
                    <div class="box-for overflow">                         
                        <div class="col-md-12 col-xs-12 login-blocks">
                            <h2>Login : </h2>
            <form asp-action="Login" id="loginform">
                 @if ((string)TempData.Peek("Loginerror") != null)
                    {
                        
                        <div class="text-danger">@((string)TempData["Loginerror"])</div>
                    }
                <div class="form-group">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" type="text" class="form-control" id="emaillogin" class="emailnew" placeholder="E-mail">
                    <span class="emialerror text-danger"></span>

                </div>
                <div class="form-group">
                   
                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" type="password" class="form-control" id="passwordlogin" placeholder="Password">
                    <span class="passworderror text-danger">Password is required</span>
                    
                </div>

               @* <div class="form-group">
